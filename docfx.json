{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
  "metadata": [
    {
      "src": [
        {
          "files": ["src/**/*.csproj"],
          "exclude": ["src/**/*.UnitTests.csproj", "**/bin/**", "**/obj/**"]
        }
      ],
      "output": "codebase"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "template": [
      "default",
      "material/material"
    ],
    "globalMetadata": {
      "_appLogoPath": "images/logo.png",
      "_disableContribution": true,
      "_enableSearch": true,
      "pdf": false
    },
    "postProcessors": ["ExtractSearchIndex"],
    "output": "_site"
  }
}