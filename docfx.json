{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
  "metadata": [
    {
      "src": [
        {
          "files": ["src/**/*.csproj"],
          "exclude": [
            "src/**/*.UnitTests.csproj",
            "**/bin/**",
            "**/obj/**"
          ]
        }
      ],
      "output": "api" 
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "*.md",
          "toc.yml",
          "docs/**/*.md",
          "docs/**/toc.yml"
        ],
        "exclude": [
          "obj/**",
          "_site/**",
          "artifacts/**"
        ]
      },
      {
        "files": ["api/**/*.yml", "api/toc.yml"]
      }
    ],
    "dest": "_site"
  }
}