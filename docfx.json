{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
  "metadata": [
    {
      "src": [
        {
          "files": ["src/**/*.csproj"],
          "exclude": ["src/**/*.UnitTests.csproj", "**/bin/**", "**/obj/**"]
        }
      ],
      "output": "codebase"
    }
  ],
  "build": {
    "content": [
      {
        "files": ["**/*.{md,yml}"],
        "exclude": ["artifacts/**", "obj/**", "_site/**"]
      },
      {
        "files": ["codebase/**/*.yml", "codebase/toc.yml"]
      }
    ],
    "output": "_site"
  }
}